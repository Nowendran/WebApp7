}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Beaches", FormMethod.Get))
{
    <p>
        <hr />
        Beach name: @Html.TextBox("SearchName")
        <br /><br />
        <b>Filter by: </b>
        <br />
        City: @Html.DropDownList("Beach", "All")
        <br /><br />
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.city.city_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.beach_name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.city.city_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beach_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.beach_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.beach_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.beach_id })
            </td>
        </tr>
    }
</table>
